mixin img(options = {})
  - const { path = '', image = '', format = '', width = '', height = '', altText = '', extraClass = '' } = options
  img(src=`img/${path}/${image}.${format}`, srcset=`img/${path}/${image}@2x.${format} 2x`, width=width, height=height, alt=altText, class=extraClass)&attributes(attributes)
