extends ../components/base/layout

block variables
  - const title = "Revo" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "index.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
  main
    //- на странице запрещен "голый" код
    //- все блоки вставляются из папки pug/components/blocks
    +section({
      id: 'features',
      capture: 'Your Personalized Coffee',
      title: 'COFFEE BUILD YOUR BASE',
      animated: true,
      captureAnimations: {
        'data-animation-direction': 'from',
        "data-animation": "x: -100%, opacity: 0",
      },
      titleAnimations: {
        'data-animation-direction': 'from',
        "data-animation": "x: 100%, opacity: 0",
      },
    })
      +features(data-animation-direction="from", data-animation="y: 50%, opacity: 0")
    +section({
      id: 'coffee',
      capture: 'Choose Your Favorite',
      title: 'CHUẨN GU ĐÚNG VỊ',
      mods: ['cello-to-alice', 'panaram-slider',],
      animated: true,
      captureAnimations: {
        'data-animation-direction': 'from',
        "data-animation": "x: -100%, opacity: 0",
      },
      titleAnimations: {
        'data-animation-direction': 'from',
        "data-animation": "x: -100%, opacity: 0",
      },
    })
      +favourite(data-animation-direction="from", data-animation="x: -50%, opacity: 0")
    +section({
      id: 'giftset',
      capture: 'Best Gift For Best Friend',
      title: 'GIFTSET',
      mods: ['solitude-to-alice', 'short-tabs',],
      animated: true,
      captureAnimations: {
        'data-animation-direction': 'from',
        "data-animation": "x: -100%, opacity: 0",
      },
      titleAnimations: {
        'data-animation-direction': 'from',
        "data-animation": "x: 100%, opacity: 0",
      },
    })
      +tabs(data-animation-direction="from", data-animation="y: 50%, opacity: 0")
    +section({
      id: 'combo',
      capture: 'Your Personalized Coffee',
      title: 'COMBO PHIN PHÊ',
      mods: ['alice-to-cello', 'panaram-slider',],
      animated: true,
      captureAnimations: {
        'data-animation-direction': 'from',
        "data-animation": "x: 100%, opacity: 0",
      },
      titleAnimations: {
        'data-animation-direction': 'from',
        "data-animation": "x: 100%, opacity: 0",
      },
    })
      +combo(data-animation-direction="from", data-animation="x: 50%, opacity: 0")

